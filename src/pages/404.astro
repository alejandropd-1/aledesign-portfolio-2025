---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found">
  <main>
    <div class="container">
      <div class="text-center padding-block-10">
        <h1 class="heading-1">404</h1>
        <h2 class="heading-2 margin-block-4">Page Not Found</h2>
        <p class="margin-block-4">
          Sorry, the page you're looking for doesn't exist.
        </p>
        <a href="/" class="button button-primary">Go back home</a>
      </div>
    </div>
  </main>
</BaseLayout>
